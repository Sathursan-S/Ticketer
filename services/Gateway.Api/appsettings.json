{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://localhost:5173"
    ]
  },
  "Swagger": {
    "ApiTitle": "Ticketer API Gateway",
    "ApiVersion": "v1",
    "ApiDescription": "Gateway for Ticketer microservices - Event Ticket Booking System"
  },
  "OpenTelemetry": {
    "ServiceName": "Gateway.Api",
    "Jaeger": {
      "Endpoint": "localhost:6831"
    },
    "Otlp": {
      "Endpoint": "http://localhost:4317"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "events-route": {
        "ClusterId": "events-cluster",
        "Match": {
          "Path": "/api/events/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/events/{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/auth/{**catch-all}"
          }
        ]
      },
      "tickets-route": {
        "ClusterId": "tickets-cluster",
        "Match": {
          "Path": "/api/tickets/{**catch-all}"
        }
      },
      "booking-route": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/api/booking/{**catch-all}"
        }
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/notifications/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "events-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://events-service:4041/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-service:4040/"
          }
        }
      },
      "tickets-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ticketservice/"
          }
        }
      },
      "booking-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://bookingservice/"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://paymentservice:8090/"
          }
        }
      },
      "notifications-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://notification-service:4042/"
          }
        }
      }
    }
  }
}