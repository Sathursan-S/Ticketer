{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",

    "Cors": {
        "AllowedOrigins": [
            "http://localhost",
            "https://localhost",
            "http://localhost:3000",
            "http://localhost:5173",
            "https://localhost:5173"
        ]
    },

    "Swagger": {
        "ApiTitle": "Ticketer API Gateway",
        "ApiVersion": "v1",
        "ApiDescription": "Gateway for Booking, Ticket, Payment, Events, and Notification services"
    },

    "ReverseProxy": {
        "Routes": {
            "booking-route": {
                "ClusterId": "booking-cluster",
                "Match": { "Path": "/api/booking/{**catch-all}" },
                "Transforms": [{ "PathRemovePrefix": "/api/booking" }]
            },
            "ticket-route": {
                "ClusterId": "ticket-cluster",
                "Match": { "Path": "/api/tickets/{**catch-all}" },
                "Transforms": [{ "PathRemovePrefix": "/api/tickets" }]
            },
            "payment-route": {
                "ClusterId": "payment-cluster",
                "Match": { "Path": "/api/payments/{**catch-all}" },
                "Transforms": [{ "PathRemovePrefix": "/api/payments" }]
            },
            "events-route": {
                "ClusterId": "events-cluster",
                "Match": { "Path": "/api/events/{**catch-all}" },
                "Transforms": [{ "PathRemovePrefix": "/api/events" }]
            },
            "notification-route": {
                "ClusterId": "notification-cluster",
                "Match": { "Path": "/api/notifications/{**catch-all}" },
                "Transforms": [{ "PathRemovePrefix": "/api/notifications" }]
            }
        },
        "Clusters": {
            "booking-cluster": {
                "Destinations": {
                    "booking": {
                        "Address": "http://bookingservice:80/",
                        "Swagger": [
                            {
                                "PrefixPath": "/bookingservice",
                                "Paths": ["/swagger/v1/swagger.json"]
                            }
                        ]
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Path": "/health"
                    }
                }
            },
            "ticket-cluster": {
                "Destinations": {
                    "ticket": {
                        "Address": "http://ticketservice:80/",
                        "Swagger": [
                            {
                                "PrefixPath": "/ticketservice",
                                "Paths": ["/swagger/v1/swagger.json"]
                            }
                        ]
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Path": "/health"
                    }
                }
            },
            "payment-cluster": {
                "Destinations": {
                    "payment": {
                        "Address": "http://paymentservice:8090/",
                        "Swagger": [
                            {
                                "PrefixPath": "/paymentservice",
                                "Paths": ["/swagger/v1/swagger.json"]
                            }
                        ]
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Path": "/health"
                    }
                }
            },

            "events-cluster": {
                "Destinations": {
                    "events": {
                        "Address": "http://events-service:8081/",
                        "Swagger": [
                            {
                                "PrefixPath": "/events",
                                "Paths": ["/swagger/v1/swagger.json"]
                            }
                        ]
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Path": "/health"
                    }
                }
            },
            "notification-cluster": {
                "Destinations": {
                    "notification": {
                        "Address": "http://notification-service:4042/",
                        "Swagger": [
                            {
                                "PrefixPath": "/notification-service",
                                "Paths": ["/swagger/v1/swagger.json"]
                            }
                        ]
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Path": "/health"
                    }
                }
            }
        }
    }
}
